<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.desve.attendancegps.WelcomeActivity">

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="signOut"
        android:text="Sign Out" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Welcome,\nnull"
            android:textSize="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="joinMeeting"
            android:text="Join Meeting" />

        <Button
            android:id="@+id/host_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="hostMeeting"
            android:text="Host Meeting" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="analytics"
            android:text="Analytics" />

        <Button
            android:id="@+id/currentButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onCurrentClicked"
            android:text="Current Meeting"
            android:textColor="@color/common_google_signin_btn_text_dark" />

    </LinearLayout>

</RelativeLayout>
